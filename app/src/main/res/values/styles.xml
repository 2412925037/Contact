<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--通讯录大全View-->
    <style name="tel_showtext">
        <item name="android:background">#FF009ACD</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/tel_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tel_show_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--ActionBar的-->
    <style name="action_bar_icon">
        <item name="android:contentDescription">动作导航条icon的Style</item>
        <item name="android:layout_width">@dimen/actionbar_icon_width</item>
        <item name="android:layout_height">@dimen/actionbar_icon_heigth</item>
        <item name="android:background">@drawable/home_entry_item</item>
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
